  "POST /api/articles": {
    "description": "serves created article",
    "payload": {
      "author": "<Reference String>",
      "title": "<String>",
      "body": "<String>",
      "topic": "<Reference String>",
      "article_img_url": "<String>*"
    },
    "exampleResponse": {
      "article": {
        "author": "grumpy19",
        "title": "The Notorious MSG’s Unlikely Formula For Success",
